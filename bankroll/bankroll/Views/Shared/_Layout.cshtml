<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="~/Content/jquery-ui-1.11.2.custom/jquery-ui.min.css" type="text/css" />
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("iBankroll", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Entries", "Index", "Entry")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">$ @SessionProfile.Player.Bankroll <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#editBankroll" data-toggle="modal" id="editPlayerBankroll">Edit Bankroll</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        @Html.Partial("~/Views/Player/_EditBankroll.cshtml", new bankroll.Models.EditBankrollModel { Bankroll = SessionProfile.Player.Bankroll })
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Content/jquery-ui-1.11.2.custom/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.maskMoney.js"></script>
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        $(document).ready(function () {

            $("#PlayerBankroll").maskMoney({ thousands: '.', decimal: ',' });
        });
    </script>
</body>
</html>
