@model bankroll.Models.EditBankrollModel

@using (Html.BeginForm("EditBankroll", "Player", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="modal fade" id="editBankroll">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Edit Bankroll</h4>
                </div>
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label class="col-xs-3 control-label">
                            Bankroll
                        </label>
                        <div class="col-xs-9">
                            @Html.TextBoxFor(x => x.Bankroll, new { @class = "form-control", placeholder = "Bankroll", id = "PlayerBankroll" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
}

